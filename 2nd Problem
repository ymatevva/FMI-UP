#include<iostream>
#include<climits>//in order to get the limits of the different types of variables
#include<limits.h>
int main()
{
    std :: cout << "The maximum limit of int data type is:" << INT_MAX << std :: endl;
    std :: cout << "The minimum limit of int data type is:" << INT_MIN << std ::  endl;
    std :: cout << "The maximum limit of unsigned int data type is:" << UINT_MAX << std :: endl;
    std :: cout << "The maximum limit of lon long int data type is:" << LLONG_MAX << std ::endl;
    std :: cout << "The maximum limit of int data type is:" << LLONG_MIN << std :: endl;
    std :: cout << "The maximum limit of int data type is:" << ULLONG_MAX << std ::endl;
    std :: cout << "The Bits contain in char :" << CHAR_BIT << std :: endl;
    std :: cout << "The maximum limit of char data type is:" << CHAR_MAX << std :: endl;
    std :: cout << "The minimum limit of int data type is:" << CHAR_MIN << std ::endl;
    std :: cout << "The maximum limit of int data type is:" << SCHAR_MAX <<  std ::endl;
    std :: cout << "The maximum limit of signed char data type is:" << SCHAR_MIN << std ::endl;
    std :: cout << "The maximum limit of unsigned char data type is:" << UCHAR_MAX << std :: endl;
    std :: cout << "The maximum limit of short data type is:" << SHRT_MAX <<std :: endl;
    std :: cout << "The maximum limit of short data type is:" << SHRT_MIN << std ::endl;
    std :: cout << "The maximum limit of unsigned short data type is:" << USHRT_MAX << std :: endl;

}
